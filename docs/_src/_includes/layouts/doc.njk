---
layout: layouts/base.njk
---
{% set currentUrl = page.url %}
<main class="max-w-6xl mx-auto sm:grid grid-cols-5 text-black dark:text-neutral-100 px-8 relative gap-4">
	<nav class="self-start sticky top-[6.75rem] col-span-1">
		<ul>
			{% for heading in nav %}
				<li class="mb-4">
					<h2 class="font-bold text-md">{{heading.name}}</h2>
					<ul class="ml-2">
						{% for item in heading.items %}
							<li>
								<a class="hover:underline" {% if currentUrl === item.url %}aria-current="page" {% endif %} href="{{item.url}}">{{item.name}}</a>
							</li>
						{% endfor %}
					</ul>
				</li>
			{% endfor %}
		</ul>
	</nav>
	<article class="prose prose-lg dark:prose-invert max-w-none col-span-3">
		{{ content | safe }}
	</article>
	<aside class="self-start col-span-1 dark:text-neutral-200 hidden lg:block lg:sticky top-[6.75rem] text-sm border-solid border-2 p-4 border-neutral-200 dark:border-neutral-500 rounded-md">
		<h2 class="font-bold text-md">On this page</h2>
		<a href="#" class="hover:underline">Overview</a>
		{{ content | toc | safe }}
		<h2 class="mt-2 font-bold text-md">Contribute</h2>
		<ul>
			<li>
				<a class="hover:underline" href="{{meta.sourcePath}}/blob/main/docs/{{ page.inputPath }}">Edit this page</a>
			</li>
			<li>
				<a href="https://github.com/Bearer/curio/issues/new/choose" class="hover:underline">Leave feedback</a>
			</li>
		</ul>
	</aside>
</main>
<footer class="p-4 mt-4 text-center">
	<nav></nav>
</footer>