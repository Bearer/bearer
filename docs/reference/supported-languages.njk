{% renderTemplate "liquid,md" %}
# Supported languages

Bearer CLI supports the following language and framework combinations.
{% endrenderTemplate %}

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Frameworks</th>
      <th>Report Types</th>
      <th>Total rules</th>
    </tr>
  </thead>
  <tbody>
    {% for language, data in supportChart %}
      <tr>
        <td>
          <a href="#{{language}}">{{data.name}}</a>
        </td>
        <td>
          {{ rules
            .counts
            .languages[language]
            .frameworks | rewrite | join(", ") }}

        </td>
        <td>{{supportChart[language].support | join(", ")}}</td>
        <td>{{rules.counts.languages[language].count}}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>

<h2>Support details</h2>

{% for language, data in supportChart %}
  {# alias language to thisLang #}
  {% set thisLang = rules
    .counts
    .languages[language] %}
  {# set frameworkStatus to boolean. Check if language has framework(s) #}
  {% set frameworkStatus %}
  {{ true if rules.counts.languages[language].frameworks | keysToArr | length > 0 else false }}
  {% endset %}
  <h3 id="{{language}}">{{data.name}}</h3>
  {% if frameworkStatus %}
    <p>
      <strong>Frameworks supported</strong>: {{ thisLang.frameworks | rewrite | join(", ") }}</p>
  {% endif %}
  <p>
    <strong>Supported report types</strong>: {{ supportChart[language].support | join(", ")}}</p>
  {% if supportChart[language].rules %}
    <h4>Rule support</h4>
    <ul>
      <li>Core language rules: {{thisLang.baseRules | length}}</li>
      {% if frameworkStatus %}
        {% for framework, val in thisLang.frameworks %}
          <li>{{val.name | rewrite}} rules: {{val.count}}</li>
          {% endfor%}
        {% endif %}
      </ul>
    {% endif %}
  {% endfor %}

